<h1><%= @user.username %>'s Profile</h1>

<h2>Quick Links</h3>
    
<div class="equalize">
    <button class="other"> <%= link_to "New Exercise", { :controller => "exercises", :action => "new" } %> </button>         
    <button class="other"> <%= link_to "New Review", { :controller => "reviews", :action => "new" } %> </button>
    <button class="other"> <%= link_to "New Workout", { :controller => "workouts", :action => "new" } %> </button>
</div>

<h2>Exercises Created/Edited</h2>
<h4>Total Exercises: <%=@exercises.count %> </h4>
    <table>
    <tr>
        <th>Exercise</th>
        <th>Dated Updated</th>
    </tr>
    <% @exercises.each do |exercise| %>
    <tr>
        <td> <%= link_to exercise.name, exercise_path(exercise) %> </td>
        <td> <%= exercise.updated_at.strftime("%m-%d-%Y") %> </td>
    </tr>
    <% end %>
    </table>
    <br>
<h2>Reviews Added</h2>
<h4>Total Reviews: <%=@reviews.count %> </h4>
        <table>
            <tr>
                <th>Exercise</th>
                <th>Date</th>
                <th>Comment</th>
            </tr>
            <tr>
                <% @reviews.each do |review| %>
                <td> <%=link_to Exercise.find(review.exercise_id).name, exercise_path(review.exercise_id) %> </td>
                <td> <%= review.updated_at.strftime("%m-%d-%Y") %> </td>
                <td> <%= link_to review.content, review_path(review) %> </td>
            </tr>
                <% end %>

        </table>

<h2>Workouts Added</h2>
<h4>Total Workouts: <%=@workouts.count %> </h4>
        <table>
            <tr>
                <th>Workout</th>
                <th>Date</th>
            </tr>
            <tr>
                <% @workouts.each do |workout| %>
                <td> <%=link_to link_to workout.name, workout_path(workout) %> </td>
                <td> <%= workout.updated_at.strftime("%m-%d-%Y") %> </td>
            </tr>
                <% end %>

        </table>
        
