<!DOCTYPE html>

<html>
<head>
  <title>Workout Library</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
</head>
<body>

<header>
<div class="equalize">
        <% if logged_in? %>
        <button class="menu"> <%= link_to "Log Out", logout_path, method: :destroy %> </button>
        <button class="menu"> <%= link_to "User Home", user_path(current_user) %> </button>
        <button class="menu"> <%= link_to "Exercises", { :controller => "exercises", :action => "index" } %> </button>
        <button class="menu">  <%= link_to "Workouts", { :controller => "workouts", :action => "index" } %> </button>
        <% end %>
</div>
<br>

<div class="popup">
      <% flash.each do |message_type, message| %>
      <br>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
</div>
      
  <%= yield %>

</body>
</html>