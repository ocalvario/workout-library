<h1>New Exercise </h1>

<h2>Details Form </h2>
<%= form_for(@exercise, { :controller => "exercises", :action => "new" }) do |f| %>
  
  <% if @exercise.errors.any? %>
  <div class="warning">
    <h4>The following errors were detected:</h4>
    <ol>
      <% @exercise.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ol>
  </div>
<% end %>

  <table>  
   <tr>
    <th>Detail </th>
    <th>User Input</th>
  </tr>
  <div class="field_with_errors">
    <tr>
      <td> <%=f.label :name %> </td> 
      <td> <%= f.text_field :name%> </td>
  </tr>
  </div>
  <tr>
    <td> <%=f.label :body_part %> </td>
    <td> <%= f.select :body_part, ['Arms', 'Back', 'Chest', 'Core', 'Legs', 'Shoulder','Other'] %> </td>
  </tr>
  <tr>
    <td> <%=f.label :exercise_group %> </td>
    <td> <%= f.select :exercise_group, ['Primary Lift', 'Secondary Lift', 'Warmup', 'Cooldown'] %> </td>
  </tr>
  <tr>
    <td> <%=f.label :equipment %> </td> 
    <td> <%= f.select :equipment, ['Barbell', 'Body Weight', 'Cables', 'Dumbells', 'Kettlebells', 'Exercise Machine'] %> </td>
  </tr>
  <tr>
    <td> <%=f.label :description %> </td>
    <td> <%= f.text_field :description%> </td> 
  </tr>
  </div>
  </table>
  <br>
  <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Add Exercise" %>
  <% end %>