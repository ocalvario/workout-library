<h1>Exercise Index</h1>

<h2> Quick Links</h2>
<button class="other"> <%= link_to "New Exercise", new_exercise_path %></h4> </button>
<br><br>
<h2>Specific Indices</h2>

<div class="equalize">
    <button class="other"> <%= link_to "By Muscle Group", exercises_bodyparts_path %> </button> &nbsp;&nbsp;&nbsp; 
    <button class="other"> <%= link_to "By Exercise Group", exercises_exercisegroup_path %> </button> &nbsp;&nbsp;&nbsp; 
    <button class="other"> <%= link_to "By Equipment Type", exercises_equipment_path %> </button>
</div>
<br><br>

<h2>Full Exercise List</h2>
<h3>Total Exercises: <%= @exercises.count %> </h3>

<table>
    <tr>
        <th>Exercise Name</th>
        <th>Created/Edited By </th>
    </tr>
    <% @exercises.each do |exercise| %>
        <tr>
        <td> <%= link_to exercise.name, exercise_path(exercise) %> </td>
        <td> <%= link_to User.find(exercise.user_id).username, user_path(exercise.user_id) %> </td>
        </tr>
    <% end %>
</table>