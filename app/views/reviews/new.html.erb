<h1>Create New Review</h1>

<%= form_for(@review, { :controller => "reviews", :action => "new" }) do |f| %>
    <%= f.label :exercise_id %>
    <%= f.select :exercise_id, options_from_collection_for_select(@exercise, 'id', 'name')  %>
        <br>
    <%= f.label :content %>
    <%= f.text_field :content %>
        <br>
    <%= f.submit "Add Review" %>

<% end %>